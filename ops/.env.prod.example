###############################################
# PixelCraft Bloom - Production Environment    #
# Copy to backend/.env (backend) and set real  #
# values. Never commit secrets to git.         #
###############################################

# --- Supabase (Backend only) ---
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# --- Redis ---
REDIS_URL=redis://localhost:6379

# --- Security ---
JWT_SECRET_KEY=replace-with-long-random-string
ADMIN_JWT_TOKEN=admin-jwt-for-tests-only
USER_JWT_TOKEN=user-jwt-for-tests-only

# --- API Server ---
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false
ENVIRONMENT=production

# --- CORS ---
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://pixelcraft.lovable.app

# --- Logging ---
LOG_LEVEL=INFO
LOG_FILE=/var/log/pixelcraft/app.log

# --- Rate Limiting ---
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# --- External Services (optional) ---
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

###############################################
# Frontend (Vercel) - set these in Vercel      #
# Project Settings â†’ Environment Variables      #
###############################################

# Base URLs
VITE_API_BASE_URL=https://api.yourdomain.com
VITE_WS_URL=wss://api.yourdomain.com

# Supabase (Frontend public keys only)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key

# Environment flags
VITE_ENV=production

# Observability (optional)
VITE_SENTRY_DSN=
VITE_GA_ID=

# Notes:
# - Do NOT expose SUPABASE_SERVICE_ROLE_KEY in frontend.
# - Keep JWT secrets, service keys out of the repo; use secrets managers.
# - Update ALLOWED_ORIGINS to include your deployed domains.

###############################################
# Payments (Stripe)
###############################################
STRIPE_API_KEY=sk_live_xxx_or_test
STRIPE_WEBHOOK_SECRET=whsec_xxx
STRIPE_PRICE_ID=price_xxx_default
STRIPE_MODE=subscription
STRIPE_SUCCESS_URL=https://yourdomain.com/payments/success
STRIPE_CANCEL_URL=https://yourdomain.com/payments/cancel

# Notes:
# - Use test keys for staging; live keys for production only.
# - Configure Stripe Webhook endpoint to POST to https://api.yourdomain.com/api/payments/webhook
